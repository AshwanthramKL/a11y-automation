<div>
  <AaNav />
  <header class="bg-white dark:bg-gray-800 shadow-sm">
    <h1 class="max-w-6xl mx-auto py-4 px-4 sm:px-6 lg:px-8 measure-h1">
      Potential A11y Violation:
      <br/>{{@model.title}}
    </h1>
  </header>
  <main id="main">
    <div class="max-w-6xl mx-auto py-6 sm:px-6 lg:px-8">
      <div
        class="bg-white dark:bg-gray-800 dark:text-white overflow-hidden shadow rounded-lg divide-y divide-gray-200 min-h-screen"
      >
        <ul class="px-4 py-5 sm:px-6 list-status">
          <li class="list-status-item">
            <span class="status-badge status-{{@model.linting}}">
                Linting {{@model.lintingText}}
            </span>
          </li>
          <li class="list-status-item">
            <span class="status-badge status-{{@model.testing}}">
              Testing {{@model.testingText}}
            </span>
          </li>
        </ul>
        <article class="px-4 py-5 sm:p-6 article">
            {{!-- template-lint-disable no-triple-curlies --}}
            {{{@model.html}}}
            {{!-- template-lint-enable no-triple-curlies --}}
        </article>
        <div class="px-4 py-6 sm:px-6">
            <h3 id="list-criteria-title" class="measure-h3">
              Relevant Link(s) (external):
            </h3>
            <ul class="list-tags flex flex-col list-inside ml-4" aria-labelledby="list-criteria-title">
              {{#each @model.tags as |tagitem|}}
                <li class="flex-auto py-2">
                  {{#if tagitem.url}}
                    <a href={{tagitem.url}} class="underline text-indigo-800 p-2 rounded-lg hover:text-indigo-800 hover:bg-gray-300 focus:border-indigo-700 focus:border-4 focus:border-dashed dark:text-yellow-400 dark:hover:text-yellow-400 dark:focus:border-yellow-300 dark:hover:bg-gray-700">
                      {{tagitem.title}}{{#if tagitem.level}} (Level {{tagitem.level}}) {{/if}}
                    </a>
                  {{else}}
                    {{tagitem.title}}{{#if tagitem.level}} (Level {{tagitem.level}}) {{/if}}
                  {{/if}}
                </li>
              {{else}}
                <li class="flex-auto py-2">
                  No relevant criterion found.
                </li>
              {{/each}}
            </ul>
        </div>
      </div>
    </div>
  </main>
</div>