          aria-label="toggle dark/light mode"
          {{on "click" this.onChangeTheme}}
          class="bg-white px-3 py-2 rounded-md flex items-center shrink-0"
        >
          {{#if this.isDarkTheme}}
            <img
              src="/assets/images/light-theme.svg"
